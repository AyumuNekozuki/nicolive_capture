{
    "manifest_version": 2,
    "name": "nicocapture",
    "version": "0.0.1",
    "description": "ニコ生をキャプチャして画像にする拡張",
    "content_scripts": [
        {
            "matches": [
                "https://live2.nicovideo.jp/watch/*",
                "https://live.nicovideo.jp/watch/*"
            ],
            "js": [
                "html2canvas.min.js", 
                "jquery-3.5.1.min.js", 
                "main.js"
            ]
        }
    ],
    "permissions": [
        "*://*.nicovideo.jp/"
    ]
}